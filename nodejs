<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .line { overflow: hidden; }
        .seat {
            /* 좌석 하나에 div하나, flost:left로 정리하기 
                -> 부모는 overflow:hidden해주기 짝궁짝짝궁 */
            margin: 2px; 
            float: left;
            width: 30px; 
            height: 30px;
            border-radius: 3px;
        }
        /* 사용가능하면 gray, 마우스를 올리면 black, 사용불가능이면 red */
        .enable { background: gray; } 
        .enable:hover { background: black; }
        .disable { background: red; }
    </style>
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <!-- 소켓 사용 -->
    <script>
        var socket = io.connect();

        socket.on('reserve',function(data){
            //다시 보내진 데이터를 여기서 받아
            var $target = $('div[data-x='+data.x+'][data-y'+data.y+']');
            $target.removeClass('enable');
            $target.addClass('disable');
        });

        socket.on('delete',function(data){
            //다시 보내진 데이터를 여기서 받아
            var $target = $('div[data-x='+data.x+'][data-y'+data.y+']');
            $target.removeClass('disalbe');
        });
    </script>

    <!-- 제이쿼리 사용 -->
    <script>
        $(function(){
            //onClickSeat이벤트 만들기!
            var onClickSeat = function(){
                var x = $(this).attr('data-x');
                var y = $(this).attr('data-y');

                if(confirm('좌석을 예약하시겠습니까?')){
                    //OK
                    $(this).off('click');
                    socket.emit('reserve',{
                        x:x,
                        y:y
                    });
                }else{
                    //NO
                    alert('취소 되었습니다.');
                }
            };

            $('button').click(function(){
                if(confirm('취소하겠습니까?')){
                    $.getJSON('/seats',{dummy:new Date().getTime()},function(data){
                        socket.emit('delete',data);
                    });
                }
            });

        //새로고침하면 다시 getJSON 실행
            $.getJSON('/seats',{dummy:new Date().getTime()},function(data){
                //function(y인덱스번호, 각 행)
                $.each(data,function(indexY,line){
                    //전체를 감싸는 div입니다. 거기에 line이라는 class속성(CSS)을 넣어줘요
                    var $line = $('<div></div>').addClass('line'); 
                    //function(x인덱스번호, 각 행에 있는 값)
                    $.each(line,function(indexX,seat){
                        // 문서 객체를 생성 -> 변수 $line에 추가
                        var $output = $('<div></div>', {
                            'class': 'seat',
                            'data-x': indexX,
                            'data-y': indexY,
                            'seat':seat
                        }).appendTo($line);
                        if(seat == 1){
                            $output.addClass('enable').on('click',onClickSeat);
                        }else if(seat == 2){
                            $output.addClass('disable');
                        }
                    });
                    $line.appendTo('body');
                    $('button').appendTo('body');
                });

            });
        });
    </script>
</head>
<body>
<!-- 동적인 페이지를 만들기 위해 script만 사용함 -->
<button>취소</button>
</body>
</html>
