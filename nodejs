<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .line { overflow: hidden; }
        .seat {
            /* 좌석 하나에 div하나, flost:left로 정리하기 
                -> 부모는 overflow:hidden해주기 짝궁짝짝궁 */
            margin: 2px; 
            float: left;
            width: 30px; 
            height: 30px;
            border-radius: 3px;
        }
        /* 사용가능하면 gray, 마우스를 올리면 black, 사용불가능이면 red */
        .enable { background: gray; } 
        .enable:hover { background: black; }
        .disable { background: red; }
    </style>
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <!-- 소켓 사용 -->
    <script>
        var socket = io.connect();

        socket.on('reserve',function(data){
            var $target = $('div[data-x='+data.x+'][data-y='+data.y+']');
            $target.removeClass('enable');
            $target.addClass('disable');
        });

        // socket.on('reset',function(data){
        //     $output.removeClass('disable');
        //     $output.addClass('enable');
        // })
    </script>

    <!-- 제이쿼리 사용 -->
    <script>
        $(function(){

            var onClickSeat = function(){
                var x = $(this).attr('data-x');
                var y = $(this).attr('data-y');

                if(confirm('좌석을 예약하시겠습니까?')){
                    $(this).off('click');
                    socket.emit('reserve',{
                        x:x,
                        y:y
                    });
                }else{
                    alert("취소되었습니다.");
                }
            };

            // var onReset = function(){
            //     if(confirm('모든 예약을 취소하시겠습니까?')){
            //         socket.emit('reset');
            //     }else{
            //         alert("취소되었습니다.");
            //     }
            // }

            $.getJSON('/seats',{dummy:new Date().getTime()},function(data){
                //function(y인덱스번호, 각 행)
                $.each(data,function(indexY,line){
                    //전체를 감싸는 div입니다. 거기에 line이라는 class속성(CSS)을 넣어줘요
                    var $line = $('<div></div>').addClass('line'); 
                    //function(x인덱스번호, 각 행에 있는 값)
                    $.each(line,function(indexX,seat){
                        // 문서 객체를 생성 -> 변수 $line에 추가
                        var $output = $('<div></div>', {
                            'class': 'seat',
                            'data-x': indexX,
                            'data-y': indexY
                        }).appendTo($line);
                        if(seat == 1){
                            $output.addClass('enable').on('click',onClickSeat);
                        }else if(seat == 2){
                            $output.addClass('disable');
                        }

                        if($('#reset').on('click')){
                            if(seat == 2){
                                $output.removeClass('disable');
                                $output.addClass('enable').on('click',onClickSeat);
                            }
                        }
                    });
                    $line.appendTo('body');
                });
            });
        });
    </script>
</head>
<body>
<!-- 동적인 페이지를 만들기 위해 script만 사용함 -->
<input type="button" value="취소" id="reset">
</body>
</html>
